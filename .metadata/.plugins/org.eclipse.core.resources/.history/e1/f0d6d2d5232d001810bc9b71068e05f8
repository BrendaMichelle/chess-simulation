package chess;

public class Board {
	private static BoardCell[][] board = new BoardCell [8][8]; 
	
	public void initialize_board() {
		for(int i = 0; i < board.length; i++){
            for(int j = 0; j < board.length; j++){
                Board.board[i][j] = new BoardCell();
            }
        }
	}
	
